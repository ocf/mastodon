apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: mastodon-web-deployment
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: mastodon-web
    spec:
      securityContext:
        runAsUser: 1055
      volumes:
        - name: mastodon-web-data
          persistentVolumeClaim:
            claimName: mastodon-pvc
      containers:
        - name: web
          image: "docker.ocf.berkeley.edu/mastodon:<%= version %>"
          command:
            - sh
            - -c
            - >-
              RAILS_ENV=production
              bundle exec rails db:migrate;
              bin/tootctl cache clear;
              bundle exec rails s -p 3000 -b 0.0.0.0
          ports:
            - name: web
              containerPort: 3000
          envFrom:
            - configMapRef:
                name: mastodon-config
            - secretRef:
                name: mastodon-secret
          resources:
            requests:
              memory: 512Mi
              cpu: 250m
          volumeMounts:
            - name: mastodon-web-data
              mountPath: /mastodon/public/system
---
apiVersion: v1
kind: Service
metadata:
  name: mastodon-web
spec:
  ports:
    - name: web
      port: 3000
      targetPort: 3000
  selector:
    app: mastodon-web

